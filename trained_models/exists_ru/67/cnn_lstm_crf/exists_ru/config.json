{
    "dataset_reader": {
        "type": "custom-dataset-reader",
        "token_indexers": {
            "token_characters": {
                "type": "characters",
                "min_padding_length": 3
            }
        }
    },
    "iterator": {
        "type": "basic",
        "batch_size": 100
    },
    "model": {
        "type": "crf_tagger_f1",
        "encoder": {
            "type": "lstm",
            "bidirectional": true,
            "hidden_size": 100,
            "input_size": 40
        },
        "text_field_embedder": {
            "token_characters": {
                "type": "character_encoding",
                "embedding": {
                    "embedding_dim": 20
                },
                "encoder": {
                    "type": "cnn",
                    "embedding_dim": 20,
                    "ngram_filter_sizes": [
                        2,
                        3
                    ],
                    "num_filters": 20,
                    "output_dim": 40
                }
            }
        }
    },
    "train_data_path": "temp/datasets/exists_ru/exists_ru_train.xlsx",
    "validation_data_path": "temp/datasets/exists_ru/exists_ru_test.xlsx",
    "trainer": {
        "num_epochs": 40,
        "optimizer": {
            "type": "adam",
            "lr": 0.01
        },
        "patience": 10,
        "validation_metric": "+f1_macro"
    },
    "vocabulary": {
        "directory_path": "temp/datasets/exists_ru/cnn_lstm_crf/vocabulary"
    }
}