{
    "dataset_reader": {
        "type": "custom-dataset-reader",
        "token_indexers": {
            "token_characters": {
                "type": "characters"
            }
        }
    },
    "iterator": {
        "type": "basic",
        "batch_size": 100
    },
    "model": {
        "type": "simple_tagger_f1",
        "encoder": {
            "type": "feedforward",
            "feedforward": {
                "activations": "linear",
                "hidden_dims": [
                    50,
                    50,
                    50
                ],
                "input_dim": 40,
                "num_layers": 3
            }
        },
        "text_field_embedder": {
            "token_characters": {
                "type": "character_encoding",
                "embedding": {
                    "embedding_dim": 10
                },
                "encoder": {
                    "type": "lstm",
                    "hidden_size": 40,
                    "input_size": 10
                }
            }
        }
    },
    "train_data_path": "temp/datasets/exists_ru/exists_ru_train.xlsx",
    "validation_data_path": "temp/datasets/exists_ru/exists_ru_test.xlsx",
    "trainer": {
        "num_epochs": 100,
        "optimizer": {
            "type": "adam",
            "lr": 0.1
        },
        "patience": 10
    },
    "vocabulary": {
        "directory_path": "temp/datasets/exists_ru/simple_lstm_characters_only/vocabulary"
    }
}